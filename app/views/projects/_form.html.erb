<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <div class="col-md-12 text-end">
            <%= link_to projects_path, class: "btn btn-primary", data: {toggle: 'tooltip', placement: 'top'}, title: 'Back' do %>
              <i class='bi bi-arrow-left' aria-hidden='true'></i>
            <% end %>
          </div>
          <h1>New project</h1>
          <%= form_with model: [project] do |form| %>
            <% if project.errors.any? %>
              <div style="color: red">
                <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
                <ul>
                  <% project.errors.each do |error| %>
                    <li><%= error.full_message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <div class="field">
              <%= form.label :Project_name%>
              <%= form.text_field :name, class: "form-control" %><br>
            </div>
            <h4>User Listing</h4>
            <%= form.collection_check_boxes(:user_ids, User.where(:organization_id => current_user.organization_id), :id, :name) do |b| %>
            <%= b.label { b.check_box + b.text  } %></br>
          <% end %>
            <div>
              <%= form.button "Save", class:"btn btn-lg btn-primary btn-block form-control col-md-3 mr-1"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>