<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <div class="col-md-12 text-end">
            <% if @user.has_role_admin%>
              <%= link_to new_project_path(@user),class: "btn btn-primary"  do%> 
                <i class='bi bi-plus-circle-fill' aria-hidden='true'></i> 
              <% end %>
            <% end %>
          </div> 
          <h1>Project</h1>
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>Name</th>
                <% if @user.has_role_admin%>
                  <th>Action</th>
                <% end %>
              </tr>
            </thead>
            <tbody>
              <% @projects.each do |project| %>
                <tr>
                  <td><%= project.name %></td>
                  <% if current_user.has_role_admin %>
                    <td>
                      <%= link_to edit_project_path(project.id), class: "btn btn-success", data: {toggle: 'tooltip', placement: 'top', title: 'Edit Update'} do %>
                        <i class='bi bi-pencil-fill' aria-hidden='true'></i>
                      <% end %>
                      <%= button_to "<i class=\"bi bi-trash3-fill\"></i>".html_safe, project, class: "btn btn-danger", method: :delete,
                                  data: { confirm: 'Are you sure?' } %> 
                    </td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="pagination justify-content-center">
            <%= paginate @projects, theme: 'bootstrap-5', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>
          </div>
        </div>
      </div>  
    </div>
  </div>
</div>