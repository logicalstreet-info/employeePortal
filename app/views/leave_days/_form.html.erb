<div class="container">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <h1>Add Holiday</h1>
          <%= form_with model: [leave_day] do |form| %>
            <div class="field">
              <%= form.date_field :holiday, class: "form-control" %><br>
            </div>
            <div>
              <%= form.button "Save", class:"btn btn-lg btn-primary btn-block form-control col-md-3 mr-1"%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

            

            

