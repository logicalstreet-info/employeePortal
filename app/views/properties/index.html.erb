<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <% if current_user.check_role%>
            <div class="col-md-12 text-end">
              <%= link_to new_property_path, target: "_top" ,class: "btn btn-primary"  do%> 
                <i class='bi bi-plus-circle-fill' aria-hidden='true'></i> 
              <% end %>
            </div>
          <% end %>
          <h1>Assets</h1>
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Purchase Date</th>
                <th>Warranty Month</th>
                <th>Assets Type</th>
                <th>User Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <div id="projects">
                <% @properties.each do |property| %>
                  <tr>
                    <td><%= property.name %></td>
                    <td><%= property.description %></td>
                    <td><%= property.purchase_date %></td>
                    <td><%= property.warranty_month %></td>
                    <td><%= property.assets_type %></td>
                    <td>
                      <% if property.user_id.present? %>
                        <%= property.user.name %>
                      <% end %>
                    </td>
                    <td>
                    <%= link_to edit_property_path(property.id), target: "_top", class: "btn btn-success", data: {toggle: 'tooltip', placement: 'top', title: 'Edit Update'} do %>
                      <i class='bi bi-pencil-fill' aria-hidden='true'></i>
                    <% end %>
                    <%= button_to "<i class=\"bi bi-trash3-fill\"></i>".html_safe, property, class: "btn btn-danger", method: :delete,
                                data: { confirm: 'Are you sure?' } %>
                    </td>
                  </tr>
                <% end %>
              </div>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>