<div id="edit_user_password_form">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card my-5 shadow">
          <div class="card-body">
            <div class="row">
                <div class="row mt-8">
                  <div class="col-9">
                    <h2>Update Password</h2><br>
                  </div>
              <div class="col-3 text-end">
                <%= link_to users_path, class: "btn btn-primary", toggle: 'tooltip', placement: 'top', title: 'Back' do %>
                  <i class='bi bi-arrow-left' aria-hidden='true'></i>
                <% end %>
              </div>
              <%= form_for @user, url: update_password_password_path do |f| %>
                <div class="row">
                  <div class="field col-12">
                    <% invalid = @user.errors.include?(:password) %>
                    <div class="form-group">
                      <%= f.text_field :password, class: "form-control #{'is-invalid' if invalid}", placeholder: "Password" %>
                      <% if invalid %>
                        <div class="invalid-feedback d-block">
                          <% @user.errors.full_messages_for(:password).each do |error_message| %>
                            <%= error_message %>.
                          <% end %>
                        </div>
                      <% end %>
                    </div><br>
                  </div>
                </div>
                <div class="row">
                  <div class="field col-12">
                    <% invalid = @user.errors.include?(:password_confirmation) %>
                    <div class="form-group">
                      <%= f.text_field :password_confirmation, class: "form-control #{'is-invalid' if invalid}",placeholder: "Confirm Password" %>
                      <% if invalid %>
                        <div class="invalid-feedback d-block">
                          <% @user.errors.full_messages_for(:password_confirmation).each do |error_message| %>
                            <%= error_message %>.
                          <% end %>
                        </div>
                      <% end %>
                    </div><br>
                  </div>
                </div>
                <div class="col-md-12 text-end">
                  <%= f.button "Save", class:"btn btn-primary"%>
                </div><br />
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>