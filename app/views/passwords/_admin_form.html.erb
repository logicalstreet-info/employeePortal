<div id="edit_user_password_form">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card my-5 shadow">
          <div class="card-body">
            <h2>Update Password</h2>
            <%= form_for @user, url: update_password_password_path do |f| %>
              <% invalid = @user.errors.include?(:password) %>
              <div class="form-group">
                <%= f.text_field :password, class: "form-control #{'is-invalid' if invalid}",placeholder: "Password" %>
                <% if invalid %>
                  <div class="invalid-feedback d-block">
                    <% @user.errors.full_messages_for(:password).each do |error_message| %>
                      <%= error_message %>.
                    <% end %>
                  </div>
                <% end %>
              </div><br>
              <% invalid = @user.errors.include?(:password_confirmation) %>
              <div class="form-group">
                <%= f.text_field :password_confirmation, class: "form-control #{'is-invalid' if invalid}",placeholder: "Confirm Password" %>
                <% if invalid %>
                  <div class="invalid-feedback d-block">
                    <% @user.errors.full_messages_for(:password_confirmation).each do |error_message| %>
                      <%= error_message %>.
                    <% end %>
                  </div>
                <% end %>
              </div><br>
              <div class="actions">
                <%= f.button "Save", class:"btn btn-lg btn-primary btn-block form-control col-md-3 mr-1"%>
              </div><br />
            <% end %>
            <div class="text-center">
              <%= link_to 'Back', root_path%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>