<div id="password_form">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card my-5 shadow">
          <div class="card-body">
            <h2>Update Password</h2>
            <%= form_for @user, url:  passwords_edit_path do |f| %>
              <div class="field">
                <%= form_group_for f, :password, label: false  do %>
                  <span class="input-group-addon"></span>
                  <%= f.password_field :password, class: 'form-control', placeholder: 'Password'%>
                <% end %> 
              </div>
              <div class="field">
                <%= form_group_for f, :password_confirmation, label: false  do %>
                  <span class="input-group-addon"></span>
                  <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm Password' %>
                <% end %>
              </div>
              <div class="actions">
                <%= f.button "Save", class:"btn btn-lg btn-primary btn-block form-control col-md-3 mr-1"%>
              </div><br />
            <% end %>
            <div class="text-center">
              <%= link_to 'Back', root_path%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</form>


