<div class="row">
  <div class="field col-4">
    <%= form.hidden_field :organization_id, :value => current_user.organization_id %>
    <% invalid = @update.errors.include?(:in_time) %>
      <div class="form-group">
        <%= form.label :Start_time %>
        <div class="input-group date" >
          <%= form.text_field :in_time, class: "form-control timepicker-input #{'is-invalid' if invalid}", value: @update.in_time&.strftime('%I:%M %p') %>
          <div class="input-group-append" >
            <div class="input-group-text"><i class: "i class="bi bi-stopwatch""></i></div>
          </div>
          <% if invalid %>
            <div class="invalid-feedback d-block">
              <% @update.errors.full_messages_for(:in_time).each do |error_message| %>
                <%= error_message %>.
              <% end %>
            </div>
          <% end %>
        </div><br>
      </div>
  </div>
  <div class="field col-4">
    <% invalid = @update.errors.include?(:out_time) %>
    <div class="form-group">
      <%= form.label :End_time %>
      <div class="input-group date" data-target="#daily_update_start_time" data-toggle="datetimepicker" >
        <%= form.text_field :out_time, class: "form-control timepicker-input #{'is-invalid' if invalid}", value: @update.out_time&.strftime('%I:%M %p') %>
        <div class="input-group-append" >
          <div class="input-group-text"><i class: "i class="bi bi-stopwatch""></i></div>
        </div>
        <% if invalid %>
          <div class="invalid-feedback d-block">
            <% @update.errors.full_messages_for(:out_time).each do |error_message| %>
              <%= error_message %>.
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="field col-4">
    <% invalid = @update.errors.include?(:project_id) %>
    <div class="form-group">
      <%= form.label :project %>
      <%= form.collection_select :project_id, @project, :id, :name, {prompt: "Select Project"}, { class: "form-control #{'is-invalid' if invalid}" } %>
      <% if invalid %>
        <div class="invalid-feedback d-block">
          <% @update.errors.full_messages_for(:project_id).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="field">
    <% invalid = @update.errors.include?(:description) %>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.rich_text_area :description, class: "form-control #{'is-invalid' if invalid}" %>
      <% if invalid %>
        <div class="invalid-feedback d-block">
          <% @update.errors.full_messages_for(:description).each do |error_message| %>
            <%= error_message %>.
          <% end %>
        </div>
      <% end %>
    </div><br>
  </div>
</div>
            