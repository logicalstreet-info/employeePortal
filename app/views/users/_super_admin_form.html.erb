<div id="super_admin_form">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
        <div class="card my-5 shadow">
          <div class="card-body">
            <h2>Create Admin</h2><br>
            <%= form_for User.new, :url => {:action => "add_user"} do |form| %>
              <div>
                <%= form.hidden_field :organization_id, :value => params[:organization_id] %>
              </div>

              <div>
                <% if current_user.has_role_admin %>
                  <%= hidden_field_tag :redirect_url, organizations_admin_index_path  %>
                <% else %>
                  <%= hidden_field_tag :redirect_url, organizations_index_path  %>
                <% end %>
              </div>

              <div class="field col-12">
                <% invalid = @user.errors.include?(:name)%>
                <div class="form-group">
                  <div class="field">
                    <%= form.label :Name%>
                    <%= form.text_field :name, class: "form-control #{'is-invalid' if invalid}", placeholder: 'Name'%>
                    <% if invalid %>
                        <div class="invalid-feedback d-block">
                          <% @user.errors.full_messages_for(:name).each do |error_message| %>
                            <%= error_message %>.
                          <% end %>
                        </div>
                      <% end %>
                  </div><br>
                </div>
              </div>

              <div class="field col-12">
                <% invalid = @user.errors.include?(:email)%>
                <div class="form-group">
                  <div class="field">
                    <%= form.label :Email%>
                    <%= form.text_field :email, class: "form-control #{'is-invalid' if invalid}", placeholder: 'Email'%>
                    <% if invalid %>
                        <div class="invalid-feedback d-block">
                          <% @user.errors.full_messages_for(:email).each do |error_message| %>
                            <%= error_message %>.
                          <% end %>
                        </div>
                      <% end %>
                  </div><br>
                </div>
              </div>

              <div class="field col-12">
                <% invalid = @user.errors.include?(:password)%>
                <div class="form-group">
                  <div class="field">
                    <%= form.label :Password%>
                    <%= form.text_field :password, class: "form-control #{'is-invalid' if invalid}", placeholder: 'Password'%>
                    <% if invalid %>
                        <div class="invalid-feedback d-block">
                          <% @user.errors.full_messages_for(:password).each do |error_message| %>
                            <%= error_message %>.
                          <% end %>
                        </div>
                      <% end %>
                  </div><br>
                </div>
              </div>
              <div class="col-md-12 text-end">
                <%= form.button "Create An Admin", class: "btn btn-primary " %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>