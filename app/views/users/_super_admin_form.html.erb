<div class="container">
  <div class="row">
      <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
       <div class="card my-5 shadow">
        <div class="card-body">
          <h1>Create Admin</h1>
          <%= form_for User.new, :url => {:action => "add_user"} do |form| %>
            <div>
              <%= form.hidden_field :organization_id, :value => params[:organization_id] %>
            </div>
            <div>
            <% if current_user.has_role_admin %>
              <%= hidden_field_tag :redirect_url, organizations_admin_index_path  %>
            <% else %>
              <%= hidden_field_tag :redirect_url, organizations_index_path  %>
            <% end %>
            </div>
            <div class="form-group">
              <div class="field">
                <%= form.label :Name%>
                <%= form.text_field :name, class: 'form-control', placeholder: 'email'%><br>
              </div>
            </div>
            <div class="form-group">
              <div class="field">
                <%= form.label :Email%>
                <%= form.text_field :email, class: 'form-control', placeholder: 'email'%><br>
              </div>
            </div>
            <div class="form-group">
              <div class="field">
                <%=form.label :password%>
                <%= form.password_field :password, class: 'form-control', placeholder: 'password'%><br>
              </div>    
            <div>
              <%= form.button "Create Admin", class: "btn btn-lg btn-primary btn-block form-control col-md-3 mr-1" %>
            </div>
          <% end %>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>