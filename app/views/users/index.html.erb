<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 mx-auto">
      <div class="card my-5 shadow">
        <div class="card-body">
          <div class="col-md-12 text-end">
            <%= link_to new_user_path(),class: "btn btn-primary", target: "_top", title: 'New User' do%> 
              <i class='bi bi-plus-circle-fill' aria-hidden='true'></i> 
            <% end %>
          </div> 
          <h1>Employee List</h1>
          <table class="table">
            <thead class="thead-light">
              <tr>
                <th>Employee-Name</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td class="col-9">
                    <%= link_to user.name, user_profile_user_path(user.id)%>
                  </td>
                  <td class="col-3">
                    <%= link_to edit_user_user_path(user.id), class: "btn btn-sm btn-success", target: "_top", data: {toggle: 'tooltip', placement: 'top'}, title: 'Edit User' do %>
                      <i class='bi bi-pencil-fill' aria-hidden='true'></i>
                    <% end %>
                  
                    <%= link_to edit_password_password_path(user.id), class: "btn btn-sm btn-warning", data: {toggle: 'tooltip', placement: 'top'}, title: 'Edit Password' do %>
                      <i class='bi bi-eye-fill' aria-hidden='true'></i>
                    <% end %>
                    <%= link_to user_path(user.id), method: :delete , data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-sm btn-danger", toggle: 'tooltip', placement: 'top', title: 'Destroy category' do %>
                      <i class='bi bi-trash3-fill' aria-hidden='true'></i>
                    <% end %>
                    
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div class="pagination justify-content-center">
            <%= paginate @users, theme: 'bootstrap-5', pagination_class: "pagination-sm", nav_class: "d-inline-b" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>