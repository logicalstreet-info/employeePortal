<div class="row">
  <div class="field col-4">
    <%= form.label :Start_date%>
    <div class="input-group date">
      <%= form.text_field :start_date, data: {
          controller: "flatpickr",
          flatpickr_enable_time: true
        }, class: "form-control datepicker-input", value: @bond.start_date&.strftime("%d-%m-%Y") %>
      <div class="input-group-append">
        <div class="input-group-text"><i class="bi bi-calendar3"></i></i></div>
      </div>
    </div>
  </div>
  
  <div class="field col-4">
    <%= form.label :End_date%>
    <div class="input-group date" data-provide="date">
      <%= form.text_field :end_date, class: "form-control datepicker-input", value: @bond.end_date&.strftime("%d-%m-%Y") %>
      <div class="input-group-append">
        <div class="input-group-text"><i class="bi bi-calendar3"></i></i></div>
      </div>
    </div>
  </div>

  <div class="field col-4" >
    <%= form.label :User_name%>
    <%= form.select :user_id, options_for_select(@users_array, selected: params[:user_id]),{ include_blank: "All User"}, class: "form-control col-md-3 mr-1" %>
  </div>
</div>

<div class="row">
  <div class="col">
    <%= form.label :description %>
    <%= form.rich_text_area :description, class: 'form-control', row: 5 %>
  </div><br>
</div>