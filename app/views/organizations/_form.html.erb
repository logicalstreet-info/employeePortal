<div id="organization_form">
  <%= form_with(model: organization, id: "#{dom_id(organization)}_form") do |form| %>
    <div class="container">
      <div class="row mt-3">
        <div class="col">
          <%= form_group_for form, :name, label: false  do %>
            <%= form.text_field :name, class: 'form-control md-5 mr-1', placeholder: 'Add organization'%>
          <% end %>
        </div>
        <div class="col">
          <%= form.submit class: "btn btn-outline-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>



